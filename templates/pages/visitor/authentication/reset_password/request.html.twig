{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block description %}Réinitialisez votre mot de passe{% endblock %}

{% block keywords %}Réinitialisation, mot-de-passe{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center my-3 display-5">Réinitialisation du mot de passe</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-9 col-lg-5 mx-auto shadow p-4 bg-white">
                {{ form_start(requestForm) }}
                    <div class="mb-3">
                        <label for="reset_password_request_form_email">Email</label>
                        {{form_widget(requestForm.email, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                        <small><em>Entrez votre adresse email et nous vous enverrons le lien de réinitialisation du mot de passe.</em></small>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-primary w-100">
                    </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>

{% endblock %}
